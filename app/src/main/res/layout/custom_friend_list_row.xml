<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id = "@+id/friend_list_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="5dp"
        android:padding = "3dp">
        <TextView
            android:id="@+id/friend_list_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stas"
            android:textSize="24dp"
            android:fontFamily="@font/my_written"
            android:letterSpacing="0.1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/friend_list_surname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sidorov"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/my_written"
            android:letterSpacing="0.1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/friend_list_name_txt"
            />

        <TextView
            android:id="@+id/friend_list_nickname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shiz"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:fontFamily="@font/my_written"

            android:letterSpacing="0.1"
            android:textColor="#787878"
            app:layout_constraintTop_toBottomOf="@id/friend_list_name_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/friend_list_percentages_productive_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textSize = "24dp"
        android:textColor = "#f0989f"
        android:layout_gravity = "center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/my_written"
        android:letterSpacing="0.1"
        android:layout_toRightOf="@id/friend_list_name_layout"/>

    <TextView
        android:id="@+id/friend_list_percentages_interest_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25%"
        android:textSize = "24dp"
        android:letterSpacing="0.1"
        android:layout_gravity = "center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/my_written"
        android:textColor="#ffcc00"
        android:layout_toRightOf="@id/friend_list_percentages_productive_txt"/>

    <TextView
        android:id="@+id/friend_list_percentages_ordinary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25%"
        android:textSize = "24dp"
        android:letterSpacing="0.1"
        android:layout_gravity = "center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/my_written"
        android:textColor="#bbdefb"
        android:layout_toRightOf="@id/friend_list_percentages_interest_txt" />

    <TextView
        android:id="@+id/friend_list_last_notion_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_list_name_layout"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/my_written"
        android:layout_centerHorizontal = "true"
        android:letterSpacing="0.1"
        android:text="Хороший день"
        android:textColor="@color/black"
        android: ="false"
        android:textSize="16dp"
        />
</RelativeLayout>