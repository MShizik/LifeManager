<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:radius="100sp" />
            <stroke android:width="0.8dp" android:color="@color/black" />
            <solid android:color="#f5f5f5"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#70A6D3"/>      <!--color name="color_green">#3bd391</color-->
            <corners android:radius="100sp"/>
        </shape>
    </item>
</selector>