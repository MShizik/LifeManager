<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style = "@style/CustomConstraintLayout.Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/main_text_greeting"
        style = "@style/CustomTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/my_written"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="5dp"
        android:text="@string/main_greeting"
        android:textSize="32dp"
        android:textStyle="normal"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_text_email_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:minHeight="48dp"
        android:fontFamily="@font/my_written"
        android:textColorHint="#686868"
        android:letterSpacing="0.1"
        android:hint="Email"
        android:textSize="20dp"
        android:gravity="center_vertical|left"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_text_greeting" />

    <EditText
        android:id="@+id/main_text_password_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/my_written"
        android:letterSpacing="0.1"
        android:textColorHint="#686868"
        android:ems="10"
        android:minHeight="48dp"
        android:hint="Password"
        android:textSize="20dp"
        android:gravity="center_vertical|left"
        android:paddingBottom="4dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_text_email_field" />

    <Button
        android:id="@+id/main_sign_btn"
        style="@style/CustomTextButtonActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/my_written"
        android:text="@string/sign_in_btn"
        android:textAllCaps="false"
        android:textSize="32dp"
        android:textStyle="normal"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_text_password_field"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_reg_btn"
        style="@style/CustomBorderedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_btn"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAllCaps="false"
        android:textSize="32dp"
        android:textStyle="normal"
        android:fontFamily="@font/my_written"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_sign_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>