<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_view_style"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <Button
        android:id="@+id/invite_accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.IconButton"
        android:drawableLeft = "@drawable/ic_baseline_check_24"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="32dp"
        android:textStyle="normal"
        android:fontFamily="@font/my_written"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/invite_list_name_layout"/>
    <Button
        android:id="@+id/invite_decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.IconButton"
        android:drawableLeft = "@drawable/ic_baseline_close_24"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="32dp"
        android:textStyle="normal"
        android:fontFamily="@font/my_written"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/invite_accept_btn"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id = "@+id/invite_list_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:padding = "3dp">
        <TextView
            android:id="@+id/friend_list_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stas"
            android:textSize="22dp"
            android:fontFamily="@font/my_written"
            android:letterSpacing="0.1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/friend_list_surname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sidorov"
            android:textSize="22sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/my_written"
            android:letterSpacing="0.1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/friend_list_name_txt"
            />

        <TextView
            android:id="@+id/friend_list_nickname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shiz"
            android:layout_marginTop="2dp"
            android:textSize="22dp"
            android:fontFamily="@font/my_written"

            android:letterSpacing="0.1"
            android:textColor="#787878"
            app:layout_constraintTop_toBottomOf="@id/friend_list_name_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</RelativeLayout>