<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="500"
    android:enterFadeDuration="500">

    <item android:state_focused="true">
        <shape android:shape="oval">
            <size
                android:width="65dp"
                android:height="65dp"/>
            <solid
                android:color="@color/transparent"/>
            <stroke android:color="?android:colorAccent"
                android:width = "1dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:width="65dp"
                android:height="65dp"/>
            <solid
                android:color="@color/transparent"/>
            <stroke android:color="?android:colorAccent"
                android:width = "1dp"/>
        </shape>
    </item>

    <item android:state_focused="false" >
        <shape android:shape="oval">
            <size
                android:width="65dp"
                android:height="65dp"/>
            <solid
                android:color="@color/transparent"/>
            <stroke android:color="@color/black"
                android:width = "0.5dp"/>
        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape android:shape="oval">
            <size
                android:width="65dp"
                android:height="65dp"/>
            <solid
                android:color="@color/transparent"/>
            <stroke android:color="@color/black"
                android:width = "0.5dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="oval">
            <size
                android:width="65dp"
                android:height="65dp"/>
            <solid
                android:color="@color/transparent"/>
            <stroke android:color="@color/black"
                android:width = "0.5dp"/>
        </shape>
    </item>


</selector>