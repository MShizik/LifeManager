<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_view_style"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id = "@+id/friend_list_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding = "3dp">
        <TextView
            android:id="@+id/friend_list_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stas"
            android:textSize="22dp"
            android:fontFamily="@font/my_written"
            android:letterSpacing="0.1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/friend_list_surname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sidorov"
            android:textSize="22sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/my_written"
            android:letterSpacing="0.1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/friend_list_name_txt"
            />

        <TextView
            android:id="@+id/friend_list_nickname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shiz"
            android:layout_marginTop="2dp"
            android:textSize="22dp"
            android:fontFamily="@font/my_written"

            android:letterSpacing="0.1"
            android:textColor="#787878"
            app:layout_constraintTop_toBottomOf="@id/friend_list_name_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>