<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_view_style"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id = "@+id/friend_list_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding = "3dp">
        <TextView
            android:id="@+id/friend_list_name_txt"
            style="@style/CustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stas"
            android:textSize="22dp"
            android:fontFamily="@font/my_written"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/friend_list_surname_txt"
            style="@style/CustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sidorov"
            android:textSize="22sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/my_written"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/friend_list_name_txt"
            />

        <TextView
            android:id="@+id/friend_list_nickname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shiz"
            android:layout_marginTop="2dp"
            android:textSize="22dp"
            android:fontFamily="@font/my_written"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:textColor="#787878"
            app:layout_constraintTop_toBottomOf="@id/friend_list_name_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/friend_list_percentages_productive_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@id/friend_list_percentages_interest_txt"

        android:fontFamily="@font/my_written"
        android:letterSpacing="0.1"
        android:text="50%"
        android:textColor="#f0989f"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/friend_list_percentages_interest_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@id/friend_list_percentages_ordinary_txt"
        android:fontFamily="@font/my_written"
        android:letterSpacing="0.1"
        android:text="25%"
        android:textColor="#ffcc00"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/friend_list_percentages_ordinary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/my_written"
        android:letterSpacing="0.1"
        android:text="25%"
        android:textColor="#bbdefb"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/friend_list_last_notion_txt"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_list_name_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/my_written"
        android:letterSpacing="0.1"
        android:text="Хороший день"
        android:textSize="16dp" />
</RelativeLayout>